










{% schema %}
{
"name": "Dynamic Duo Cards",
"target": "section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "layout",
"label": "Layout Style",
"options": [
{
"value": "fullwidth",
"label": "Full Width"
},
{
"value": "boxed",
"label": "Grid"
}
],
"default": "fullwidth"
},
{
"type": "range",
"id": "gap",
"label": "Space Between Cards",
"min": 0,
"max": 50,
"step": 1,
"default": 0,
"unit": "px"
},
{
    "type": "select",
    "id": "height",
    "label": "Block Height",
    "options": [
      {
        "value": "50vh",
        "label": "Small"
      },
      {
        "value": "80vh",
        "label": "Medium"
      },
      {
        "value": "100vh",
        "label": "Large"
      }
    ],
    "default": "80vh"
  },
  
{
"type": "select",
"id": "mobile_visibility",
"label": "Mobile Visibility",
"options": [
{
"value": "left",
"label": "Show Left Card Only"
},
{
"value": "right",
"label": "Show Right Card Only"
},
{
"value": "both",
"label": "Show Both Cards"
}
],
"default": "left"
},
{
"type": "range",
"id": "bottom_margin",
"label": "Bottom Margin",
"default": 0,
"min": 0,
"max": 100,
"step": 1
},
{
"type": "header",
"content": "Card Content"
},
{
"type": "select",
"id": "content_alignment",
"label": "Content Alignment",
"options": [
{
"value": "left",
"label": "Left"
},
{
"value": "center",
"label": "Center"
},
{
"value": "right",
"label": "Right"
}
],
"default": "center"
},
{
"type": "range",
"id": "content_vertical_alignment",
"label": "Content Vertical Alignment",
"min": 0,
"max": 75,
"step": 1,
"default": 10,
"unit": "%"
},
{
"type": "header",
"content": "Typography"
},
{
"type": "select",
"id": "heading_size",
"label": "Heading Size",
"options": [
{
"value": "h1",
"label": "H1"
},
{
"value": "h2",
"label": "H2"
},
{
"value": "h3",
"label": "H3"
}
],
"default": "h2"
},
{
"type": "color",
"id": "text_color",
"label": "Heading Text Color",
"default": "#000000"
},
{
"type": "header",
"content": "Buttons"
},
{
"type": "select",
"id": "button_style",
"label": "Button Edge Style",
"options": [
{
"value": "rounded",
"label": "Rounded"
},
{
"value": "square",
"label": "Square"
}
],
"default": "square"
},
{
"type": "color",
"id": "button_color",
"label": "Button Color",
"default": "#000000"
},
{
"type": "color",
"id": "button_text_color",
"label": "Button Text Color",
"default": "#ffffff"
},
{
"type": "range",
"id": "button_padding",
"label": "Button Padding",
"min": 5,
"max": 20,
"step": 1,
"default": 10,
"unit": "px"
},
{
"type": "header",
"content": "First Card"
},
{
"type": "image_picker",
"id": "image_1",
"label": "Card Image"
},
{
"type": "text",
"id": "heading_1",
"label": "Heading",
"default": "First Heading"
},
{
"type": "text",
"id": "button_1_1_text",
"label": "First Button Text",
"default": "Button"
},
{
"type": "url",
"id": "button_1_1_link",
"label": "First Button URL"
},
{
"type": "text",
"id": "button_1_2_text",
"label": "Second Button Text",
"default": "Button 2"
},
{
"type": "url",
"id": "button_1_2_link",
"label": "Second Button URL"
},
{
"type": "header",
"content": "Second Card"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Card Image"
},
{
"type": "text",
"id": "heading_2",
"label": "Heading",
"default": "Second Heading"
},
{
"type": "text",
"id": "button_2_1_text",
"label": "First Button Text",
"default": "Button"
},
{
"type": "url",
"id": "button_2_1_link",
"label": "First Button URL"
},
{
"type": "text",
"id": "button_2_2_text",
"label": "Second Button Text",
"default": "Button 2"
},
{
"type": "url",
"id": "button_2_2_link",
"label": "Second Button URL"
}
]
}
{% endschema %}