{% if block.settings.video_url != blank %}
  <iframe class="video-hero-background" width="100%" height="100%" src="{{ block.settings.video_url | prepend: 'https://' }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
{% endif %}

{% if cover_image_to_display != blank and block.settings.video_behavior == 'cover' %}
  <div class="cover-image-container">
    <img src="{{ cover_image_to_display | img_url: 'master' }}" alt="Cover Image" class="video-hero-poster"/>
    <button class="video-play-button">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="icon icon-play">
        <path fill="currentColor" d="M8 5v14l11-7z"/>
      </svg>
    </button>
  </div>
{% endif %}

{% if video_to_display %}
  <video class="video-hero-background" playsinline{% if block.settings.video_behavior == 'autoplay' %} autoplay{% endif %} muted loop>
    {% for source in video_to_display.sources %}
      <source src="{{ source.url }}" type="{{ source.mime_type }}">
    {% endfor %}
    Your browser does not support the video tag.
  </video>
{% endif %}</div>
{% if block.settings.enable_mobile_video and block.settings.mobile_video != blank %}
<div class="mobile-video hide-on-desktop">
<video playsinline autoplay muted loop>
{% for source in block.settings.mobile_video.sources %}
<source src="{{ source.url }}" type="{{ source.mime_type }}">
{% endfor %}
Your browser does not support the video tag.
</video>
</div>
{% endif %}

<div class="video-hero-overlay"> <h1 class="video-hero-text{% if block.settings.show_heading_on_mobile %} show-on-mobile{% else %} hide-on-mobile{% endif %}" style="color: {{ block.settings.heading_color }};"> {{ block.settings.heading }} </h1> <p class="video-hero-subtext{% if block.settings.show_subtext_on_mobile %} show-on-mobile{% else %} hide-on-mobile{% endif %}" style="color: {{ block.settings.subtext_color }};"> {{ block.settings.subtext }} </p> <div class="video-hero-button-container"> <a href="{{ block.settings.button_link }}" class="video-hero-button{% if block.settings.enable_rounded_button %} rounded-button{% endif %}{% if block.settings.show_button_on_mobile %} show-on-mobile{% else %} hide-on-mobile{% endif %}" style="background-color: {{ block.settings.button_color }}; color: {{ block.settings.button_text_color }};" onmouseover="this.style.backgroundColor='{{ block.settings.button_hover_color }}'; this.style.color='{{ block.settings.button_hover_text_color }}';" onmouseout="this.style.backgroundColor='{{ block.settings.button_color }}'; this.style.color='{{ block.settings.button_text_color }}';"> {{ block.settings.button_text }} </a> </div> </div> </div>