{{ 'dynamic-duo-cards.css' | asset_url | stylesheet_tag }}
<script src="{{ 'dynamic-duo-cards.js' | asset_url }}" defer></script>

{% assign button_border_radius = '0px' %}
{% if block.settings.button_style == 'rounded' %}
  {% assign button_border_radius = '25px' %}
{% endif %}

<div class="dynamic-duo-cards {{ block.settings.layout }}"
    data-layout="{{ block.settings.layout }}"
    data-mobile-visibility="{{ block.settings.mobile_visibility }}"
    style="--text-color:{{ block.settings.text_color }};
           --button-color:{{ block.settings.button_color }};
           --button-text-color:{{ block.settings.button_text_color }};
           --gap:{{ block.settings.gap }}px;
           --button-padding:{{ block.settings.button_padding }}px;
           --content-alignment:{{ block.settings.content_alignment }};
           --button-border-radius:{{ button_border_radius }};
           margin-bottom:{{ block.settings.bottom_margin }}px;">

    <div class="dynamic-duo-card dynamic-duo-card-left"
         style="background-image: url('{% if block.settings.image_1 != blank %}{{ block.settings.image_1 | image_url: width: 1500 }}{% else %}{{ 'product_collection_1.png' | asset_url }}{% endif %}');
                min-height: {{ block.settings.height }};">
        <div class="dynamic-duo-card-content" 
             style="bottom: {{ block.settings.content_vertical_alignment }}%; color: var(--text-color);">
            <{{ block.settings.heading_size }}>{{ block.settings.heading_1 }}</{{ block.settings.heading_size }}>
            {% if block.settings.button_1_1_text != blank %}
            <a href="{{ block.settings.button_1_1_link }}" class="dynamic-duo-card-button">
                {{ block.settings.button_1_1_text }}
            </a>
            {% endif %}
            {% if block.settings.button_1_2_text != blank %}
            <a href="{{ block.settings.button_1_2_link }}" class="dynamic-duo-card-button">
                {{ block.settings.button_1_2_text }}
            </a>
            {% endif %}
        </div>
    </div>

    <div class="dynamic-duo-card dynamic-duo-card-right"
         style="background-image: url('{% if block.settings.image_2 != blank %}{{ block.settings.image_2 | image_url: width: 1500 }}{% else %}{{ 'product_collection_2.png' | asset_url }}{% endif %}');
                min-height: {{ block.settings.height }};">
        <div class="dynamic-duo-card-content" 
             style="bottom: {{ block.settings.content_vertical_alignment }}%; color: var(--text-color);">
            <{{ block.settings.heading_size }}>{{ block.settings.heading_2 }}</{{ block.settings.heading_size }}>
            {% if block.settings.button_2_1_text != blank %}
            <a href="{{ block.settings.button_2_1_link }}" class="dynamic-duo-card-button">
                {{ block.settings.button_2_1_text }}
            </a>
            {% endif %}
            {% if block.settings.button_2_2_text != blank %}
            <a href="{{ block.settings.button_2_2_link }}" class="dynamic-duo-card-button">
                {{ block.settings.button_2_2_text }}
            </a>
            {% endif %}
        </div>
    </div>
</div>











{% schema %}
{
"name": "Dynamic Duo Cards",
"target": "section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "layout",
"label": "Layout Style",
"options": [
{
"value": "fullwidth",
"label": "Full Width"
},
{
"value": "boxed",
"label": "Grid"
}
],
"default": "fullwidth"
},
{
"type": "range",
"id": "gap",
"label": "Space Between Cards",
"min": 0,
"max": 50,
"step": 1,
"default": 0,
"unit": "px"
},
{
"type": "select",
"id": "height",
"label": "Block Height",
"options": [
{
"value": "400px",
"label": "Medium"
},
{
"value": "600px",
"label": "Large"
}
],
"default": "500px"
},
{
"type": "select",
"id": "mobile_visibility",
"label": "Mobile Visibility",
"options": [
{
"value": "left",
"label": "Show Left Card Only"
},
{
"value": "right",
"label": "Show Right Card Only"
},
{
"value": "both",
"label": "Show Both Cards"
}
],
"default": "left"
},
{
"type": "range",
"id": "bottom_margin",
"label": "Bottom Margin",
"default": 0,
"min": 0,
"max": 100,
"step": 1
},
{
"type": "header",
"content": "Card Content"
},
{
"type": "select",
"id": "content_alignment",
"label": "Content Alignment",
"options": [
{
"value": "left",
"label": "Left"
},
{
"value": "center",
"label": "Center"
},
{
"value": "right",
"label": "Right"
}
],
"default": "center"
},
{
"type": "range",
"id": "content_vertical_alignment",
"label": "Content Vertical Alignment",
"min": 0,
"max": 75,
"step": 1,
"default": 10,
"unit": "%"
},
{
"type": "header",
"content": "Typography"
},
{
"type": "select",
"id": "heading_size",
"label": "Heading Size",
"options": [
{
"value": "h1",
"label": "H1"
},
{
"value": "h2",
"label": "H2"
},
{
"value": "h3",
"label": "H3"
}
],
"default": "h2"
},
{
"type": "color",
"id": "text_color",
"label": "Heading Text Color",
"default": "#000000"
},
{
"type": "header",
"content": "Buttons"
},
{
"type": "select",
"id": "button_style",
"label": "Button Edge Style",
"options": [
{
"value": "rounded",
"label": "Rounded"
},
{
"value": "square",
"label": "Square"
}
],
"default": "square"
},
{
"type": "color",
"id": "button_color",
"label": "Button Color",
"default": "#000000"
},
{
"type": "color",
"id": "button_text_color",
"label": "Button Text Color",
"default": "#ffffff"
},
{
"type": "range",
"id": "button_padding",
"label": "Button Padding",
"min": 5,
"max": 20,
"step": 1,
"default": 10,
"unit": "px"
},
{
"type": "header",
"content": "First Card"
},
{
"type": "image_picker",
"id": "image_1",
"label": "Card Image"
},
{
"type": "text",
"id": "heading_1",
"label": "Heading",
