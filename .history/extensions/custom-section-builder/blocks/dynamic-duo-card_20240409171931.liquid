{
"type": "header",
"content": "Second Card"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Card Image"
},
{
"type": "text",
"id": "heading_2",
"label": "Heading",
"default": "Second Heading"
},
{
"type": "text",
"id": "button_2_1_text",
"label": "First Button Text",
"default": "Button"
},
{
"type": "url",
"id": "button_2_1_link",
"label": "First Button URL"
},
{
"type": "text",
"id": "button_2_2_text",
"label": "Second Button Text",
"default": "Button 2"
