{{ 'product-spotlight.css' | asset_url | stylesheet_tag }}

<div class="product-spotlight" style="padding: 50px 0;">
  {% if block.settings.product != blank %}
    <div class="product-spotlight-card {% if block.settings.curved_edges %}curved-edges{% endif %}" style="background-color: {{ block.settings.card_bg_color }}; width: 400px;">
      <div class="product-spotlight-image-container" style="height: 400px;">
        {% for image in block.settings.product.images %}
          <img src="{{ image | image_url: width: 400, height: 400 }}" alt="{{ block.settings.product.title }}" class="product-spotlight-image {% if forloop.first %}active{% endif %}">
        {% endfor %}
      </div>
      <div class="product-spotlight-info">
        <div class="product-spotlight-title" style="font-size: {{ block.settings.title_font_size }}px; color: {{ block.settings.title_color }};">{{ block.settings.product.title }}</div>
        {% if block.settings.show_price %}
          <div class="product-spotlight-price" style="font-size: {{ block.settings.price_font_size }}px; color: {{ block.settings.price_color }};">{{ block.settings.product.price | money }}</div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

<script src="{{ 'product-spotlight.js' | asset_url }}" defer></script>

{
  "name": "Product Spotlight",
  "target": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "checkbox",
      "id": "curved_edges",
      "label": "Enable Curved Edges",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Price",
      "default": false
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "number",
      "id": "title_font_size",
      "label": "Title Font Size",
      "default": 18
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price Color",
      "default": "#888888"
    },
    {
      "type": "number",
      "id": "price_font_size",
      "label": "Price Font Size",
      "default": 16
    }
  ]
}
