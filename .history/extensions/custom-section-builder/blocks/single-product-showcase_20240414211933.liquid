{% schema %}
{
"name": "Single Product Showcase",
"target": "section",
"settings": [
{
"type": "product",
"id": "product",
"label": "Product"
},
{
"type": "color",
"id": "background_color",
"label": "Background Color",
"default": "#ffffff"
},
{
"type": "number",
"id": "image_transition_duration",
"label": "Image Transition Duration (ms)",
"default": 3000
}
]
}
{% endschema %}

HTML (single-product-showcase.liquid):

<div class="single-product-showcase" style="background-color: {{ section.settings.background_color }};"> {% assign product = all_products[section.settings.product] %} <div class="product-info"> <div class="info-left"> <h2 class="product-title">{{ product.title }}</h2> </div> <div class="info-right"> <p class="product-price">{{ product.price | money }}</p> </div> </div> <div class="product-images"> <div class="product-image-container"> {% for image in product.images %} <img src="{{ image | img_url: 'large' }}" alt="{{ image.alt }}" class="product-image {% if forloop.first %}active{% endif %}"> {% endfor %} </div>