Liquid:<!-- Add to your theme app extension's liquid file -->
<div class="scrolling-card" style="animation-duration: {{ block.settings.scroll_speed }}s;">
  <div class="card-content">
    {% if block.settings.image %}
      <img src="{{ block.settings.image | img_url: '300x300' }}" alt="{{ block.settings.title | escape }}">
    {% endif %}
    <h3>{{ block.settings.title }}</h3>
    <p>{{ block.settings.rating }}</p>
    <p>{{ block.settings.description }}</p>
    <a href="{{ block.settings.link }}">Learn More</a>
  </div>
</div>

<!-- Include your CSS file -->
{{ 'scrolling-card.css' | asset_url | stylesheet_tag }}
<!-- Include your JavaScript file -->
<script src="{{ 'scrolling-card.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Scrolling Card",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Card Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Card Title",
      "default": "Product Name"
    },
    {
      "type": "text",
      "id": "rating",
      "label": "Card Rating",
      "default": "★★★★★"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Card Description",
      "default": "Description"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Card Link",
      "default": "#"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll Speed (seconds)",
      "min": 10,
      "max": 60,
      "step": 1,
      "default": 30,
      "unit": "s"
    }
  ]
}
{% endschema %}