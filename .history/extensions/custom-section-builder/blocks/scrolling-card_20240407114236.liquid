<!-- Add to your theme app extension's liquid file -->
<div class="scrolling-cards-container" style="animation-duration: {{ block.settings.scroll_speed }}s;">
    <div class="scrolling-cards">
      {% for block in section.blocks %}
        <div class="card-content">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: '300x300' }}" alt="{{ block.settings.title | escape }}">
          {% endif %}
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.rating }}</p>
          <p>{{ block.settings.description }}</p>
          <a href="{{ block.settings.link }}">Learn More</a>
        </div>
      {% endfor %}
    </div>
  </div>
  
  <!-- Include your CSS file -->
  {{ 'scrolling-card.css' | asset_url | stylesheet_tag }}
  <!-- Include your JavaScript file -->
  <script src="{{ 'scrolling-card.js' | asset_url }}" defer></script>
  
  
  {% schema %}
  {
    "name": "Scrolling Card",
    "settings": [
      {
        "type": "range",
        "id": "scroll_speed",
        "label": "Scroll Speed",
        "min": 10,
        "max": 60,
        "step": 1,
        "default": 30,
        "unit": "s"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Card Title"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Additional text here"
      },
      {
        "type": "text",
        "id": "rating",
        "label": "Rating",
        "default": "★★★★★"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Describe your product"
      },
      {
        "type": "url",
        "id": "add_to_cart_link",
        "label": "Add to Cart Link"
      },
      {
        "type": "url",
        "id": "shop_now_link",
        "label": "Shop Now Link"
      }
    ],
    "target": "section"
  }
  
  
{% endschema %}
