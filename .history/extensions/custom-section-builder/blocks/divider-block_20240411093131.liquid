{% schema %}
{
  "name": "Divider Block",
  "target":"section",
  "settings": [
    {
      "type": "color",
      "id": "divider_color",
      "label": "Divider Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "divider_length",
      "label": "Divider Length",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "divider_thickness",
      "label": "Divider Thickness",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    }
  ]
}
{% endschema %}


{{ 'divider-block.css' | asset_url | stylesheet_tag }}

<div class="adedayo-appname-divider adedayo-appname-divider--{{ block.settings.hover_effect }}"
    style="
      --adedayo-appname-divider-color: {{ block.settings.color }};
      --adedayo-appname-divider-width: {{ block.settings.width }}%;
      --adedayo-appname-divider-thickness: {{ block.settings.thickness }}px;
    ">
  </div>
  
