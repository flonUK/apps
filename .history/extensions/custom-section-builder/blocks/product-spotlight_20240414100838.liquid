<div class="product-spotlight" style="padding: 50px 0;">
  {% if block.settings.product != blank %}
    {% if block.settings.curved_edges %}  <div class="product-spotlight-card square-edges" style="background-color: {{ block.settings.card_bg_color }}; width: 400px;">
        </div>
    {% else %}
      <div class="product-spotlight-card" style="background-color: {{ block.settings.card_bg_color }}; width: 350px;">
        </div>
    {% endif %}

    {% assign card_width = block.settings.curved_edges ? 400 : 350 %}
    <div class="product-spotlight-card {% if block.settings.curved_edges %}square-edges{% endif %}" style="background-color: {{ block.settings.card_bg_color }}; width: {{ card_width }}px;">
      </div>
  {% endif %}
</div>

<script src="{{ 'product-spotlight.js' | asset_url }}" defer></script>





{% schema %}
{
  "name": "Product Spotlight",
  "target": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "checkbox",
      "id": "curved_edges",
      "label": "Enable Curved Edges",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Price",
      "default": false
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "number",
      "id": "title_font_size",
      "label": "Title Font Size",
      "default": 18
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price Color",
      "default": "#888888"
    },
    {
      "type": "number",
      "id": "price_font_size",
      "label": "Price Font Size",
      "default": 16
    }
  ]
}
{% endschema %}
