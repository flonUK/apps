{{ 'product-spotlight.css' | asset_url | stylesheet_tag }}

<div class="product-spotlight" style="padding: 50px 0; display: flex; justify-content: space-between;">
  {% if block.settings.product_1 != blank %}
    <div class="product-spotlight-card {% if block.settings.curved_edges %}curved-edges{% else %}square{% endif %}" style="background-color: {{ block.settings.card_bg_color }}; width: 300px;">
      <div class="product-spotlight-image-container">
        {% for image in block.settings.product_1.images %}
          <img src="{{ image | image_url: width: 250, height: 250 }}" alt="{{ block.settings.product_1.title }}" class="product-spotlight-image {% if forloop.first %}active{% endif %}">
        {% endfor %}
      </div>
      <div class="product-spotlight-info">
        <div class="product-spotlight-title" style="font-size: {{ block.settings.title_font_size }}px; color: {{ block.settings.title_color }};">{{ block.settings.product_1.title }}</div>
        {% if block.settings.show_price %}
          <div class="product-spotlight-price" style="font-size: {{ block.settings.price_font_size }}px; color: {{ block.settings.price_color }};">{{ block.settings.product_1.price | money }}</div>
        {% endif %}
      </div>
    </div>
  {% endif %}
  {% if block.settings.product_2 != blank %}
    <div class="product-spotlight-card {% if block.settings.curved_edges %}curved-edges{% else %}square{% endif %}" style="background-color: {{ block.settings.card_bg_color }}; width: 300px; margin-left: 20px;">
      <div class="product-spotlight-image-container">
        {% for image in block.settings.product_2.images %}
          <img src="{{ image | image_url: width: 250, height: 250 }}" alt="{{ block.settings.product_2.title }}" class="product-spotlight-image {% if forloop.first %}active{% endif %}">
        {% endfor %}
      </div>
      <div class="product-spotlight-info">
        <div class="product-spotlight-title" style="font-size: {{ block.settings.title_font_size }}px; color: {{ block.settings.title_color }};">{{ block.settings.product_2.title }}</div>
        {% if block.settings.show_price %}
          <div class="product-spotlight-price" style="font-size: {{ block.settings.price_font_size }}px; color: {{ block.settings.price_color }};">{{ block.settings.product_2.price | money }}</div>
        {% endif %}
      </div>
    </div>
  {% endif %}
  {% if block.settings.product_3 != blank %}
    <div class="product-spotlight-card {% if block.settings.curved_edges %}curved-edges{% else %}square{% endif %}" style="background-color: {{ block.settings.card_bg_color }}; width: 300px; margin-left: 20px;">
      <div class="product-spotlight-image-container">
        {% for image in block.settings.product_3.images %}
          <img src="{{ image | image_url: width: 250, height: 250 }}" alt="{{ block.settings.product_3.title }}" class="product-spotlight-image {% if forloop.first %}active{% endif %}">
        {% endfor %}
      </div>
      <div class="product-spotlight-info">
        <div class="product-spotlight-title" style="font-size: {{ block.settings.title_font_size }}px; color: {{ block.settings.title_color }};">{{ block.settings.product_3.title }}</div>
        {% if block.settings.show_price %}
          <div class="product-spotlight-price" style="font-size: {{ block.settings.price_font_size }}px; color: {{ block.settings.price_color }};">{{ block.settings.product_3.price | money }}</div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

<script src="{{ 'product-spotlight.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Product Spotlight",
  "target": "section",
  "settings": [
    {
      "type": "array",
      "id": "products",
      "label": "Products",
      "max_items": 3,
      "item_label": "Product",
      "items": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "checkbox",
      "id": "curved_edges",
      "label": "Enable Curved Edges",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Price",
      "default": false
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "number",
      "id": "title_font_size",
      "label": "Title Font Size",
      "default": 18
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price Color",
      "default": "#888888"
    },
    {
      "type": "number",
      "id": "price_font_size",
      "label": "Price Font Size",
      "default": 16
    }
  ]
}
{% endschema %}

