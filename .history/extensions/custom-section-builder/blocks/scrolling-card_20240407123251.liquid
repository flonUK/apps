<div class="card-container" style="animation-duration: {{ settings.scroll_speed }}s;">
    {% for i in (1..10) %}
      {% capture image_var %}image_{{ i }}{% endcapture %}
      {% capture title_var %}title_{{ i }}{% endcapture %}
      {% capture rating_var %}rating_{{ i }}{% endcapture %}
      {% capture description_var %}description_{{ i }}{% endcapture %}
      {% capture link_var %}link_{{ i }}{% endcapture %}
  
      {% if settings[image_var] != blank %}
        <div class="card-content">
          <img src="{{ settings[image_var] | img_url: '300x300' }}" alt="{{ settings[title_var] | escape }}">
          <h3>{{ settings[title_var] }}</h3>
          <p>{{ settings[rating_var] }}</p>
          <p>{{ settings[description_var] }}</p>
          <a href="{{ settings[link_var] }}">Learn More</a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  
  <!-- Include your CSS file -->
  <link rel="stylesheet" href="{{ 'scrolling-card.css' | asset_url }}">
  
  <!-- Include your JavaScript file -->
  <script src="{{ 'scrolling-card.js' | asset_url }}" defer></script>
  
  
