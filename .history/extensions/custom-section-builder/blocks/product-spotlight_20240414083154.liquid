{{ 'product-spotlight.css' | asset_url | stylesheet_tag }}

<div class="product-spotlight">
  {% for i in (1..3) %}
    <div class="product-spotlight-card">
      <div class="product-spotlight-image-container" data-product-handle="{{ settings['product_' | append: i] | handleize }}"></div>
      <div class="product-spotlight-title"></div>
    </div>
  {% endfor %}
</div>

<script src="{{ 'product-spotlight.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Product Spotlight",
  "target": "section",
  "settings": [
    {
      "type": "product",
      "id": "product_1",
      "label": "Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Product 2"
    },
    {
      "type": "product",
      "id": "product_3",
      "label": "Product 3"
    },
    {
      "type": "color",
      "id": "card_bg_color_1",
      "label": "Card 1 Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "card_bg_color_2",
      "label": "Card 2 Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "card_bg_color_3",
      "label": "Card 3 Background Color",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}