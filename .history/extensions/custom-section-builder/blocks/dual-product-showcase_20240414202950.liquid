{% schema %}
{
"name": "Dual Product Showcase",
"target": "section",
"settings": [
{
"type": "product",
"id": "product_1",
"label": "Product 1"
},
{
"type": "product",
"id": "product_2",
"label": "Product 2"
},
{
"type": "color",
"id": "background_color",
"label": "Background Color",
"default": "#ffffff"
},
{
"type": "number",
"id": "image_transition_duration",
"label": "Image Transition Duration (ms)",
"default": 3000
}
]
}
{% endschema %}

HTML (dual-product-showcase.liquid):

<div class="dual-product-showcase" style="background-color: {{ section.settings.background_color }};"> {% assign product_1 = all_products[section.settings.product_1] %} {% assign product_2 = all_products[section.settings.product_2] %} <div class="product-card"> <h2 class="product-title">{{ product_1.title }}</h2> <div class="product-image-container"> {% for image in product_1.images %} <img src="{{ image | img_url: '400x400' }}" alt="{{ image.alt }}" class="product-image {% if forloop.first %}active{% endif %}"> {% endfor %} </div> <p class="product-price">{{ product_1.price | money }}</p> </div> <div class="add-to-cart-button"> <button>Add to Cart</button> </div> <div class="product-card"> <h2 class="product-title">{{ product_2.title }}</h2> <div class="product-image-container"> {% for image in product_2.images %} <img src="{{ image | img_url: '400x400' }}" alt="{{ image.alt }}" class="product-image {% if forloop.first %}active{% endif %}"> {% endfor %} </div> <p class="product-price">{{ product_2.price | money }}</p> </div> </div>