{% schema %}
{
"name": "Hero Advertisement",
"class": "hero-advertisement",
"target": "section",
"settings": [
{
"type": "image_picker",
"id": "background_image",
"label": "Background Image",
"info": "Use a wide image that is at least 1792px by 1024px."
},
{
"type": "range",
"id": "section_height",
"label": "Section Height",
"min": 50,
"max": 100,
"step": 5,
"unit": "vh",
"default": 80
},
{
"type": "text",
"id": "heading",
"label": "Heading Text",
"default": "NEW"
},
{
"type": "font_picker",
"id": "heading_font",
"label": "Heading Font",
"default": "helvetica_n4"
},
{
"type": "color",
"id": "heading_color",
"label": "Heading Color",
"default": "#FFFFFF"
},
{
"type": "range",
"id": "heading_font_size",
"label": "Heading Font Size",
"min": 12,
"max": 72,
"step": 1,
"unit": "px",
"default": 14
},
{
"type": "text",
"id": "subheading",
"label": "Subheading Text",
"default": "Women's Summer Collection"
},
{
"type": "font_picker",
"id": "subheading_font",
"label": "Subheading Font",
"default": "helvetica_n4"
},
{
"type": "range",
"id": "subheading_font_size",
"label": "Subheading Font Size",
"min": 12,
"max": 36,
"step": 1,
"unit": "px",
"default": 24
},
{
"type": "color",
"id": "subheading_color",
"label": "Subheading Color",
"default": "#FFFFFF"
},
{
"type": "url",
"id": "button_link",
"label": "Button Link"
},
{
"type": "text",
"id": "button_text",
"label": "Button Text",
"default": "Shop"
},
{
"type": "checkbox",
"id": "use_custom_button_text_color",
"label": "Use Custom Button Text Color",
"default": false
},
{
"type": "color",
"id": "button_text_color",
"label": "Button Text Color",
"default": "#DD1D1D"
},
{
"type": "color",
"id": "button_border_color",
"label": "Button Border Color",
"default": "#FFFFFF"
},
{
"type": "color",
"id": "button_hover_text_color",
"label": "Button Hover Text Color",
"default": "#000000"
},
{
"type": "color",
"id": "button_hover_bg_color",
"label": "Button Hover Background Color",
"default": "#DD1D1D"
}
]
}
{% endschema %}

<div class="hero-advertisement-section" style="background-image: url('{{ block.settings.background_image | image_url: width: 1792, height: 1024 }}'); height: {{ block.settings.section_height }}vh;"> <div class="hero-advertisement-content"> <div class="text-wrapper"> <h2 class="advertisement-heading" style="color: {{ block.settings.heading_color }}; font-family: {{ block.settings.heading_font.family }}, sans-serif; font-size: {{ block.settings.heading_font_size }}px;">{{ block.settings.heading }}</h2> <h1 class="advertisement-subheading" style="color: {{ block.settings.subheading_color }}; font-size: {{ block.settings.subheading_font_size }}px; font-family: {{ block.settings.subheading_font.family }}, sans-serif;">{{ block.settings.subheading }}</h1> </div> <a href="{{ block.settings.button_link }}" class="advertisement-shop-button" style="{% if block.settings.use_custom_button_text_color %}color: {{ block.settings.button_text_color }};{% endif %} border-color: {{ block.settings.button_border_color }}; --button-hover-text-color: {{ block.settings.button_hover_text_color }}; --button-hover-bg-color: {{ block.settings.button_hover_bg_color }};"> {{ block.settings.button_text }} </a> </div> </div>

{{ 'hero-advertisement.css' | asset_url | stylesheet_tag }}

<script src="{{ 'hero-advertisement.js' | asset_url }}" defer></script>