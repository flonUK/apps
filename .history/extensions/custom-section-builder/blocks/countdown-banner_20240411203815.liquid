{% schema %}
{
  "name": "Countdown Banner",
  "class": "countdown-banner",
  "target": "section",
  "settings": [
    {
      "type": "header",
      "content": "General Settings"
    },
    {
      "type": "radio",
      "id": "background_type",
      "label": "Background Type",
      "options": [
        {"value": "color", "label": "Color"},
        {"value": "image", "label": "Image"}
      ],
      "default": "color"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "banner_height",
      "label": "Banner Height",
      "min": 50,
      "max": 100,
      "step": 1,
      "unit": "vh",
      "default": 80
    },
    {
      "type": "header",
      "content": "Headline Settings"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Limited Time Offer"
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Headline Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "headline_size",
      "label": "Headline Font Size",
      "min": 12,
      "max": 72,
      "step": 1,
      "unit": "px",
      "default": 36
    },
    {
      "type": "header",
      "content": "Countdown Settings"
    },
    {
      "type": "text",
      "id": "countdown_date",
      "label": "Countdown Date (YYYY-MM-DD)",
      "default": "2030-12-31"
    },
    {
      "type": "color",
      "id": "countdown_color",
      "label": "Countdown Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "countdown_size",
      "label": "Countdown Font Size",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "header",
      "content": "Text Alignment"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "button_pill_style",
      "label": "Use Pill Style Button",
      "default": false
    }
  ]
}
{% endschema %}


