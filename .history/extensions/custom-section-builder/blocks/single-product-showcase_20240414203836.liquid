{% schema %}
{
"name": "Single Product Showcase",
"target": "section",
"settings": [
{
"type": "product",
"id": "product",
"label": "Product"
},
{
"type": "color",
"id": "background_color",
"label": "Background Color",
"default": "#ffffff"
},
{
"type": "number",
"id": "image_transition_duration",
"label": "Image Transition Duration (ms)",
"default": 3000
}
]
}
{% endschema %}


<div class="single-product-showcase" style="background-color: {{ block.settings.background_color }};"> {% assign product = all_products[block.settings.product] %} <div class="product-info"> <h2 class="product-title">{{ product.title }}</h2> <p class="product-price">{{ product.price | money }}</p> </div> <div class="product-image-container"> {% for image in product.images %} <img src="{{ image | img_url: '400x400' }}" alt="{{ image.alt }}" class="product-image {% if forloop.first %}active{% endif %}"> {% endfor %} </div> <div class="add-to-cart-button"> <button>Add to Cart</button> </div> </div>