  "class": "adedayo-testimonial-section",
  "settings": [
    {
      "type": "text",
      "id": "quote",
      "label": "Testimonial Quote",
      "default": "After supply became a challenge, the simple Back In Stock app saved us from losing thousands in revenue."
    },
    {
      "type": "text",
      "id": "author",
