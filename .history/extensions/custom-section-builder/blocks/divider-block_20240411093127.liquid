{% schema %}
{
  "name": "Divider Block",
  "target":"section",
  "settings": [
    {
      "type": "color",
      "id": "divider_color",
      "label": "Divider Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "divider_length",
      "label": "Divider Length",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "divider_thickness",
      "label": "Divider Thickness",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    }
  ]
}
{% endschema %}


{{ 'divider-block.css' | asset_url | stylesheet_tag }}

<div class="adedayo-appname-divider-block" style="
    background-color: {{ block.settings.divider_color }};
    height: {{ block.settings.divider_thickness }}px;
    width: {{ block.settings.divider_length }}%;
    margin-top: {{ block.settings.padding_top }}px;
    margin-bottom: {{ block.settings.padding_bottom }}px;
    margin-left: auto;
    margin-right: auto;
">
</div>
