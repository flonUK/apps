<script src="{{ 'dynamic-duo-cards.js' | asset_url }}" defer></script>

{% assign adedayo_ddc_button_border_radius = '0px' %}
{% if block.settings.button_style == 'rounded' %}
  {% assign adedayo_ddc_button_border_radius = '25px' %}
{% endif %}

<div class="adedayo-ddc-cards {{ block.settings.layout }}"
    data-adedayo-ddc-layout="{{ block.settings.layout }}"
    data-adedayo-ddc-mobile-visibility="{{ block.settings.mobile_visibility }}"
    style="--adedayo-ddc-text-color:{{ block.settings.text_color }};
           --adedayo-ddc-button-color:{{ block.settings.button_color }};
           --adedayo-ddc-button-text-color:{{ block.settings.button_text_color }};
           --adedayo-ddc-gap:{{ block.settings.gap }}px;
           --adedayo-ddc-button-padding:{{ block.settings.button_padding }}px;
           --adedayo-ddc-content-alignment:{{ block.settings.content_alignment }};
           --adedayo-ddc-button-border-radius:{{ adedayo_ddc_button_border_radius }};
           margin-bottom:{{ block.settings.bottom_margin }}px;">
   
   <div class="adedayo-ddc-card adedayo-ddc-card-left {% if block.settings.height == '400px' %}adedayo-ddc-card-medium{% else %}adedayo-ddc-card-large{% endif %}"
        style="background-image: url('{% if block.settings.image_1 != blank %}{{ block.settings.image_1 | image_url: width: 1500 }}{% else %}{{ 'product_collection_1.png' | asset_url }}{% endif %}');">
       <div class="adedayo-ddc-card-content" 
            style="bottom: {{ block.settings.content_vertical_alignment }}%; color: var(--adedayo-ddc-text-color);">
           <{{ block.settings.heading_size }}>{{ block.settings.heading_1 }}</{{ block.settings.heading_size }}>
           {% if block.settings.button_1_1_text != blank %}
           <a href="{{ block.settings.button_1_1_link }}" class="adedayo-ddc-button">
               {{ block.settings.button_1_1_text }}
           </a>
           {% endif %}
           {% if block.settings.button_1_2_text != blank %}
           <a href="{{ block.settings.button_1_2_link }}" class="adedayo-ddc-button">
               {{ block.settings.button_1_2_text }}
           </a>
           {% endif %}
       </div>
   </div>

   <div class="adedayo-ddc-card adedayo-ddc-card-right {% if block.settings.height == '400px' %}adedayo-ddc-card-medium{% else %}adedayo-ddc-card-large{% endif %}"
        style="background-image: url('{% if block.settings.image_2 != blank %}{{ block.settings.image_2 | image_url: width: 1500 }}{% else %}{{ 'product_collection_2.png' | asset_url }}{% endif %}');">
       <div class="adedayo-ddc-card-content" 
            style="bottom: {{ block.settings.content_vertical_alignment }}%; color: var(--adedayo-ddc-text-color);">
           <{{ block.settings.heading_size }}>{{ block.settings.heading_2 }}</{{ block.settings.heading_size }}>
           {% if block.settings.button_2_1_text != blank %}
           <a href="{{ block.settings.button_2_1_link }}" class="adedayo-ddc-button">
               {{ block.settings.button_2_1_text }}
           </a>
           {% endif %}
           {% if block.settings.button_2_2_text != blank %}
           <a href="{{ block.settings.button_2_2_link }}" class="adedayo-ddc-button">
               {{ block.settings.button_2_2_text }}
           </a>
           {% endif %}
       </div>
   </div>
</div>











{% schema %}
{
"name": "Dynamic Duo Cards",
"target": "section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "layout",
"label": "Layout Style",
"options": [
{
"value": "fullwidth",
"label": "Full Width"
},
{
"value": "boxed",
"label": "Grid"
}
],
"default": "fullwidth"
},
{
"type": "range",
"id": "gap",
"label": "Space Between Cards",
"min": 0,
"max": 50,
"step": 1,
"default": 0,
"unit": "px"
},
{
"type": "select",
"id": "height",
"label": "Block Height",
"options": [
{
"value": "400px",
"label": "Medium"
},
{
"value": "600px",
"label": "Large"
}
],
"default": "400px"
},
{
