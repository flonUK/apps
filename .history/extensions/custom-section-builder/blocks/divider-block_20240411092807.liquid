{% schema %}
{
  "name": "Interactive Divider",
  "settings": [
    {
      "type": "color",
      "id": "divider_color",
      "label": "Divider Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "divider_width",
      "label": "Divider Width",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "divider_thickness",
      "label": "Divider Thickness",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 2,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "hover_effect",
      "label": "Hover Effect",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "wobble",
          "label": "Wobble"
        },
        {
          "value": "pulse",
          "label": "Pulse"
        },
        {
          "value": "buzz",
          "label": "Buzz"
        }
      ],
      "default": "none"
    }
  ]
}
{% endschema %}
