{% schema %} { "name": "Countdown Banner", "class": "countdown-banner", "target": "section", "settings": [ { "type": "header", "content": "General Settings" }, { "type": "radio", "id": "background_type", "label": "Background Type", "options": [ { "value": "color", "label": "Color" }, { "value": "image", "label": "Image" } ], "default": "color" }, { "type": "color", "id": "background_color", "label": "Background Color", "default": "#000000" }, { "type": "image_picker", "id": "background_image", "label": "Background Image" }, { "type": "range", "id": "banner_height", "label": "Banner Height", "min": 50, "max": 100, "step": 1, "unit": "vh", "default": 80 }, { "type": "header", "content": "Headline Settings" }, { "type": "text", "id": "headline", "label": "Headline", "default": "Limited Time Offer" }, { "type": "color", "id": "headline_color", "label": "Headline Color", "default": "#ffffff" }, { "type": "select", "id": "headline_alignment", "label": "Headline Alignment", "options": [ { "value": "left", "label": "Left" }, { "value": "center", "label": "Center" }, { "value": "right", "label": "Right" } ], "default": "center" }, { "type": "range", "id": "headline_size", "label": "Headline Font Size", "min": 12, "max": 72, "step": 1, "unit": "px", "default": 36 }, { "type": "header", "content": "Description Settings" }, { "type": "richtext", "id": "description", "label": "Description", "default": "<p>Get your orders before the countdown ends!</p>" }, { "type": "color", "id": "description_color", "label": "Description Color", "default": "#ffffff" }, { "type": "range", "id": "description_size", "label": "Description Font Size", "min": 12, "max": 24, "step": 1, "unit": "px", "default": 18 }, { "type": "header", "content": "Countdown Settings" }, { "type": "text", "id": "countdown_date", "label": "Countdown Date (YYYY-MM-DD)", "default": "2030-12-31" }, { "type": "color", "id": "countdown_color", "label": "Countdown Color", "default": "#ffffff" }, { "type": "select", "id": "countdown_alignment", "label": "Countdown Alignment", "options": [ { "value": "left", "label": "Left" }, { "value": "center", "label": "Center" }, { "value": "right", "label": "Right" } ], "default": "center" }, { "type": "text", "id": "expired_text", "label": "Expired Text", "default": "EXPIRED" }, { "type": "range", "id": "countdown_size", "label": "Countdown Font Size", "min": 12, "max": 48, "step": 1, "unit": "px", "default": 24 }, { "type": "header", "content": "Button Settings" }, { "type": "text", "id": "button_text", "label": "Button Text", "default": "Shop Now" }, { "type": "url", "id": "link", "label": "Button Link" }, { "type": "color", "id": "button_text_color", "label": "Button Text Color", "default": "#000000" }, { "type": "color", "id": "button_background_color", "label": "Button Background Color", "default": "#ffffff" }, { "type": "checkbox", "id": "button_pill_style", "label": "Use Pill Style Button", "default": false } ] } {% endschema %}
{% if section.settings.background_type == 'color' %}
{% assign background_style = 'background-color: ' | append: section.settings.background_color | append: ';' %}
{% elsif section.settings.background_type == 'image' and section.settings.background_image != blank %}
{% assign image_url = section.settings.background_image | image_url: width: 2000 %}
{% assign background_style = 'background-image: url(' | append: image_url | append: '); background-size: cover; background-position: center;' %}
{% else %}
{% assign background_style = 'background-color: #000000;' %}
{% endif %}

<div class="adedayo-countdown-banner" style="{{ background_style }} color: {{ section.settings.text_color }}; height: {{ section.settings.banner_height }}vh;"> <div class="adedayo-countdown-banner__content"> <h2 class="adedayo-countdown-banner__headline" style="font-size: {{ section.settings.headline_size }}px; color: {{ section.settings.headline_color }}; text-align: {{ section.settings.headline_alignment }};"> {{ section.settings.headline }} </h2> <div class="adedayo-countdown-banner__description" style="font-size: {{ section.settings.description_size }}px; color: {{ section.settings.description_color }}; text-align: {{ section.settings.description_alignment }};"> {{ section.settings.description }} </div> <div class="adedayo-countdown-banner__timer" style="font-size: {{ section.settings.countdown_size }}px; color: {{ section.settings.countdown_color }}; justify-content: {{ section.settings.countdown_alignment }};" data-countdown-date="{{ section.settings.countdown_date }}" data-expired-text="{{ section.settings.expired_text }}"> <span class="adedayo-countdown-banner__timer-item adedayo-countdown-banner__days"></span> <span class="adedayo-countdown-banner__timer-separator">:</span> <span class="adedayo-countdown-banner__timer-item adedayo-countdown-banner__hours"></span> <span class="adedayo-countdown-banner__timer-separator">:</span> <span class="adedayo-countdown-banner__timer-item adedayo-countdown-banner__minutes"></span> <span class="adedayo-countdown-banner__timer-separator">:</span> <span class="adedayo-countdown-banner__timer-item adedayo-countdown-banner__seconds"></span> </div> {% if section.settings.button_text != blank %} <a href="{{ section.settings.link }}" class="adedayo-countdown-banner__link{% if section.settings.button_pill_style %} adedayo-countdown-banner__link--pill{% endif %}" style="color: {{ section.settings.button_text_color }}; background-color: {{ section.settings.button_background_color }};"> {{ section.settings.button_text }} </a> {% endif %} </div> </div>
