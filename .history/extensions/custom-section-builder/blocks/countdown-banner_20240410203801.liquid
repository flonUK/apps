{% schema %}
{
  "name": "Countdown Banner",
  "class": "countdown-banner",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Limited Time Offer"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Get your orders before the countdown ends!</p>"
    },
    {
      "type": "text",
      "id": "countdown_date",
      "label": "Countdown Date (YYYY-MM-DD)",
      "default": "2023-12-31"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "headline_size",
      "label": "Headline Font Size",
      "min": 12,
      "max": 72,
      "step": 1,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "description_size",
      "label": "Description Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "range",
      "id": "countdown_size",
      "label": "Countdown Font Size",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "url",
      "id": "link",
      "label": "Banner Link"
    }
  ]
}
{% endschema %}

<div class="adedayo-countdown-banner" style="background-color: {{ block.settings.background_color }}; color: {{ block.settings.text_color }};">
  <div class="adedayo-countdown-banner__content">
    <h2 class="adedayo-countdown-banner__headline" style="font-size: {{ block.settings.headline_size }}px;">{{ block.settings.headline }}</h2>
    <div class="adedayo-countdown-banner__description" style="font-size: {{ block.settings.description_size }}px;">{{ block.settings.description }}</div>
    <div class="adedayo-countdown-banner__timer" style="font-size: {{ block.settings.countdown_size }}px;" data-countdown-date="{{ block.settings.countdown_date }}">
      <span class="adedayo-countdown-banner__days"></span> :
      <span class="adedayo-countdown-banner__hours"></span> :
      <span class="adedayo-countdown-banner__minutes"></span> :
      <span class="adedayo-countdown-banner__seconds"></span>
    </div>
    <a href="{{ block.settings.link }}" class="adedayo-countdown-banner__link">Shop Now</a>
  </div>
</div>

{{ 'countdown-banner.css' | asset_url | stylesheet_tag }}
<script src="{{ 'countdown-banner.js' | asset_url }}" defer></script>