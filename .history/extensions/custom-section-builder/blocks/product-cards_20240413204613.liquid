{% schema %}
{
  "name": "Product Cards",
  "class": "product-cards",
  "target":"section",
  "settings": [
    {
      "type": "header",
      "content": "Product 1"
    },
    {
      "type": "text",
      "id": "product_1_title",
      "label": "Title"
    },
    {
      "type": "url",
      "id": "product_1_link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "product_1_image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Product 2"
    },
    {
      "type": "text",
      "id": "product_2_title",
      "label": "Title"
    },
    {
      "type": "url",
      "id": "product_2_link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "product_2_image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Product 3"
    },
    {
      "type": "text",
      "id": "product_3_title",
      "label": "Title"
    },
    {
      "type": "url",
      "id": "product_3_link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "product_3_image",
      "label": "Image"
    }
  ]
}

{% endschema %}

{{ 'product-cards.css' | asset_url | stylesheet_tag }}

<div class="product-cards">
  <div class="product-card">
    <a href="{{ settings.product_1_link }}">
      <img src="{{ settings.product_1_image | image_url: width: 150 }}" alt="{{ settings.product_1_title }}">
      <h3>{{ settings.product_1_title }}</h3>
    </a>
  </div>
  
  <div class="product-card">
    <a href="{{ settings.product_2_link }}">
      <img src="{{ settings.product_2_image | image_url: width: 150 }}" alt="{{ settings.product_2_title }}">
      <h3>{{ settings.product_2_title }}</h3>
    </a>
  </div>
  
  <div class="product-card">
    <a href="{{ settings.product_3_link }}">
      <img src="{{ settings.product_3_image | image_url: width: 150 }}" alt="{{ settings.product_3_title }}">
      <h3>{{ settings.product_3_title }}</h3>
    </a>
  </div>
</div>

<script src="{{ 'product-cards.js' | asset_url }}" defer></script>
